  },
  "author": "cmilfont",
  "license": "Copyright",
  "bugs": {
    "url": "https://github.com/cmilfont/feedback/issues"
  },
  "homepage": "http://feedback.herokuapp.com/",
  "dependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-resolver": "0.0.7",
    "babel-plugin-transform-decorators": "^6.6.5",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.7.2",
    "body-parser": "^1.15.0",
    "connect-flash": "^0.1.1",
    "connect-multiparty": "^2.0.0",
    "cookie-parser": "^1.4.1",
    "elasticsearch": "^11.0.1",
    "express": "^4.13.4",
    "express-react-views": "^0.10.0",
    "express-session": "^1.13.0",
    "isomorphic-fetch": "^2.2.1",
    "material-ui": "^0.15.2",
    "moment": "^2.12.0",
    "morgan": "^1.7.0",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "pg": "^4.5.1",
    "pg-hstore": "^2.3.2",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-ga": "*",
    "react-hammerjs": "*",
    "react-markdown": "*",
    "react-redux": "^4.4.5",
    "react-router": "*",
    "react-router-redux": "^4.0.5",
    "react-tap-event-plugin": "^1.0.0",
    "redux": "^3.5.2",
    "redux-api": "^0.9.8",
    "redux-saga": "^0.11.0",
    "redux-thunk": "^2.1.0",
    "sequelize": "^3.19.3",
    "sequelize-cli": "^2.3.1",
    "webpack": "^2.1.0-beta"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.2",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "envify": "^3.4.0",
    "eslint": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^0.6.2",
    "eslint-plugin-react": "^4.3.0",
    "imagemin": "^5.1.1",
    "imagemin-cli": "^2.1.0",
    "imagemin-mozjpeg": "^6.0.0",
    "imagemin-pngquant": "^5.0.0",
    "parallelshell": "^2.0.0",
    "postcss-cssnext": "^2.7.0",
    "postcss-opacity": "^4.0.0",
    "poststylus": "^0.2.3",
    "stylus": "^0.54.2",
    "uglifyify": "^3.0.1",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.3.1"
  },
  "scripts": {
    "postinstall": "sequelize db:migrate",
    "verify:js": "eslint ./app/",
    "watch:css": "stylus -w -u ./node_modules/poststylus --with \"['postcss-opacity','postcss-cssnext']\" styles/main.styl -o public/assets/css/main.css",
    "watch:js": "watchify -o public/assets/js/bundle.js -v -d app/app.js",
    "build:js": "browserify app/app.js -o public/assets/js/bundle.min.js -t babelify -t [uglifyify --no-sourcemap --no-bundle-external]",
    "watch:all": "parallelshell 'npm run watch:js' 'npm run watch:css' 'npm run offline' ",
    "dev": "parallelshell 'npm start' 'npm run watch:all' ",
    "start": "node -r babel-register index.js",
    "offline": "node -r babel-register update_version.js "
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
